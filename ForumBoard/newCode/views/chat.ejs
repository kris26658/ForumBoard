<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            margin: 0;
            background-color: #f4f4f4;
        }

        .user-list {
            float: left;
            width: 150px;
            padding: 10px;
            margin-right: 20px;
            background-color: #cacaca;
        }

        .chat-box {
            width: calc(100% - 370px);
            padding: 10px;
            background-color: #cacaca;
            overflow: hidden;
        }

        #sentMessages {
            height: 750px;
            padding: 10px;
            margin-top: 5px;
            background-color: white;
            border: 1px solid #ccc;
            overflow-y: auto;
        }

        input[type="text"] {
            width: calc(100% - 100px);
            padding: 10px;
            border: 1px solid #ccc;
        }

        input[type="submit"] {
            padding: 10px 20px;
            color: #f4f4f4;
            background-color: #6e6e6e;
            border: 1px solid #ccc;
            cursor: pointer;
        }

        h3 {
            margin: 5px;
        }

        h4 {
            margin: 5px;
        }
    </style>
</head>

<body>

    <script>
        const localUser = "<%= user %>"
        const socket = new WebSocket("ws://localhost:3000");

        socket.onopen = () => {
            socket.send(JSON.stringify({ name: localUser }));
        };

        function displayOldPosts() {

        }

        function sendMessage() {
            const messageInput = document.getElementById("messageInput");
            const messageText = messageInput.value.trim();

            if (messageText) {
                const message = { text: messageText, user: localUser };
                socket.send(JSON.stringify(message));
                messageInput.value = ""; //clear input after sending
            };
        };

        socket.onmessage = (event) => {
            try {
                if (message.list) {
                    const users = document.getElementById("users");
                    users.innerHTML = ""; //clear the user list
                    message.list.forEach((user) => {
                        const li = document.createElement("li");
                        li.textContent = user;
                        users.appendChild(li);
                    });
                }

                if (message.text) {
                    const messages = document.getElementById("sentMessages");
                    const p = document.createElement("p");
                    p.textContent = `${message.user}: ${message.text}`;
                    messages.appendChild(p);
                    messages.scrollTop = messages.scrollHeight; //scroll to the latest message
                }
            } catch (error) {
                console.error("Error parsing message:", error);
            }
        };
    </script>

    <div class="user-list">
        <h3>Online Users:</h3>
        <ul id="users"></ul>
    </div>

    <div class="chat-box">
        <h4>Welcome to the chat, <%= user %>!</h4>
        <input type="text" id="messageInput" placeholder="Type a message" size="70">
        <input id="sendButton" type="submit" value="Send" onclick="sendMessage()">
        <div id="sentMessages"></div>
        <div class="messages">
            <% if (typeof messages !=='undefined' && messages.length> 0) { %>
                <% messages.forEach(function(message) { %>
                    <div class="message">
                        <strong>
                            <%= message.user %>:
                        </strong>
                        <%= message.text %>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <p>No messages yet.</p>
                            <% } %>
        </div>

</body>

</html>